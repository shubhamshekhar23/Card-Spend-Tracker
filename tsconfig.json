{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/ui/*": ["components/ui/*"],
      "@/styles/*": ["styles/*"],
      "@/constants/*": ["data/constants/*"],
      "@/services/*": ["services/*"],
      "@/mockdata/*": ["data/mockdata/*"],
      "@/hooks/*": ["hooks/*"],
      "@/context/*": ["context/*"],
      "@/features/*": ["features/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true
  },
  "include": [
    "typings.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.scss",
    "craco.config.js"
  ],
  "exclude": ["node_modules"]
}
